<%if(success && success.length){%>
<br />
<div class="alert alert-success alert-dismissible fade show col-5 offset-3" role="alert">
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button
  ><%= success %>
</div>

<%}%>

<%if(error && error.length){%>
<br />
<div class="alert alert-danger alert-dismissible fade show col-5 offset-3" role="alert">
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button
  ><%= error %>
</div>

<%}%>
